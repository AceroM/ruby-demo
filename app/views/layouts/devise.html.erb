<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Ruby" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "resets", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "globals", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body class="container container--auth">
<div class="content-grid content-grid--auth content-grid--flash">
  <%= render "shared/flash" %>
</div>
<div class="content-grid content-grid--auth">
  <%= yield %>
</div>
<%= render "shared/font_awesome" %>
</body>
</html>
